<!DOCTYPE html>
<html lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Title Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.0/css/bulma.css" />
</head>

<body>
    <div class="colums is-centered">
        <form action="/AlbumUpdate" method="POST">
            <div class="container">
                    <% Album.forEach(function(item){ %>
                        <strong>Albüm Id :</strong>
                <div class="field">
                    <div class="control">
                        <input class="input is-primary" type="text" name="AlbumId" value="<%=item.AlbumId%>" readonly>
                    </div>
                </div>
                <strong>Albüm Adı :</strong>
                <div class="field">
                    <div class="control">
                        <input class="input is-primary" type="text" name="AlbumAdi" value="<%=item.AlbumAdi%>">
                    </div>
                </div>
                <strong>Çıkış Tarihi :</strong>
                <div class="field">
                    <div class="control">
                        <!--Burada Çıkış Tarihini Form da göndermedim nedeni ise Gönderdiğim zaman database de ilgili kolon
                            date türünde kayıtlı buradan gelen değer string türünde o yüzden hata veriyor-->
                        <input class="input is-primary" type="text" value="<%=item.CikisTarihi%>" readonly>
                    </div>
                </div>
                <% }); %>
                <strong>Sanatçı Adı :</strong>
                <div class="field">
                    <div class="control">
                        <div class="select">
                            <select name=SanatciId>
                                <% SanatciList.forEach(function(listItem){%>
                                        <option value="<%=listItem.SanatciId%>"><%=listItem.SanatciAdi%></option>
                                <%});%>
                            </select>

                        </div>
                    </div>
                </div>
                    <strong>Muzik Türü :</strong>
                    <div class="field">
                        <div class="control">
                            <div class="select">
                                <select name=MuzikTurId>
                                    <% MuzikTurList.forEach(function(listItem){%>
                                            <option value="<%=listItem.MuzikTurId%>"><%=listItem.MuzikTur%></option>
                                    <%});%>
                                </select>
    
                            </div>
                        </div>
                    </div>
                <div class="field">
                    <p class="control">
                        <button class="button is-success">
                            Yap
                        </button>
                    </p>
                </div>
            </div>
    </div>
    </form>
    </div>
</body>

</html>